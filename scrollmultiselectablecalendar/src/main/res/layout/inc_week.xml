<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/week"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/day1"
        style="@style/CalendarCellStyle.DayStyle"
        android:text="1"/>
    <TextView
        android:id="@+id/day2"
        style="@style/CalendarCellStyle.DayStyle"
        android:text="2"/>
    <TextView
        android:id="@+id/day3"
        style="@style/CalendarCellStyle.DayStyle"
        android:text="3"/>
    <TextView
        android:id="@+id/day4"
        style="@style/CalendarCellStyle.DayStyle"
        android:text="4"/>
    <TextView
        android:id="@+id/day5"
        style="@style/CalendarCellStyle.DayStyle"
        android:text="5"/>
    <TextView
        android:id="@+id/day6"
        style="@style/CalendarCellStyle.DayStyle"
        android:text="6"/>
    <TextView
        android:id="@+id/day7"
        style="@style/CalendarCellStyle.DayStyle"
        android:text="7"/>
</LinearLayout>
