<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalendarStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1.4</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CalendarStyle.WeekStyle">
        <item name="android:textSize">9dp</item>
        <item name="android:background">@drawable/border_bottom</item>
    </style>

    <style name="CalendarStyle.DayStyle">
        <item name="android:background">@drawable/border_top</item>
    </style>
</resources>
