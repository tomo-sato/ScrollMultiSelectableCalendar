<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- CellのベースStyle -->
    <style name="CalendarCellStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1.4</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- 週表示のStyle -->
    <style name="CalendarCellStyle.WeekStyle">
        <item name="android:textSize">9dp</item>
        <item name="android:background">@drawable/border_bottom</item>
    </style>

    <!-- 日付表示のStyle -->
    <style name="CalendarCellStyle.DayStyle">
        <item name="android:background">@drawable/border_top</item>
    </style>
</resources>
